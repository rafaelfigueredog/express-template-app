{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
